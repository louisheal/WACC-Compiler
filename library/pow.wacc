#library function that calculates a int x raised to an integer power y
begin
  int pow(int x, int y) is
    if (y == 0)
    then
      return 1
    else
      int i = 1;
      int z = x;
      while (i != y)
      do
        i = i + 1;
        z = z * x
      done;
      return z
    fi
  end
  skip
end